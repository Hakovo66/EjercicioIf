public class  Ejercicio04 {

    public static void main(String[] args) {

        int numeroIf = 0;

        if (numeroIf == 0){
            System.out.println("el numeroIf es 0");

        } else if (numeroIf <= 0) {
            System.out.println ("el numeroIf es negativo");

        } else if (numeroIf >= 0) {
            System.out.println ("el numeroIf es positivo");

        }
    }


    
}
